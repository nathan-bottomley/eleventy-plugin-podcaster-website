<h1>Podcaster Blog</h1>

{% for post in collections.post | reverse %}
<article>
  <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
  <p class="post-date"><time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></p>
  {% if loop.index < 3 %}
  {{ post.content | safe }}
  {% else %}
  {{ post.data.excerpt | safe }}
  <p><a href="{{ post.url }}">Continue readingâ€¦</a></p>
  {% endif %}
</article>
{% endfor %}